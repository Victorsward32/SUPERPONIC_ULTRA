        android:textColor="@color/white"
        
/>
    <LinearLayout
        android:id="@+id/SecondHorizontalLinear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#ADF0D1"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Temprature"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#00203F"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/temprature"
                />
            <TextView
                android:id="@+id/temp_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#00203F"

                android:text="NA"

                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#ADF0D1"
            app:cardCornerRadius="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Ph Levels"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00203F"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phtest1"
                    />
                <TextView
                    android:id="@+id/Ph_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#00203F"

                    android:text="NA"

                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <TextView
            android:id="@+id/Controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Controls"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:background="@drawable/backgroud_weather"
            android:textSize="20sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <!-- LED Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:gravity="center_vertical">

                <!-- LED Image -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/lightbulb"
                    android:layout_marginRight="8dp"/>

                <!-- LED Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Light On/Off"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="8dp"/>

                <!-- LED Toggle Button -->
                <Switch
                    android:id="@+id/toggleButtonLED"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false" />

            </LinearLayout>

            <!-- Motors Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                android:gravity="center_vertical">

                <!-- Motors Toggle Button -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pump"
                    android:layout_marginStart="8dp"/>


                <!-- Motors Name -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pump On/Off"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"/>

                <!-- Motors Image -->
                <Switch
                    android:id="@+id/toggleButtonMotors"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false" />


            </LinearLayout>


        </LinearLayout>




